<Window x:Class="Pizza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pizza"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="7*"/>
			<ColumnDefinition Width="203*"/>
			<ColumnDefinition Width="590*"/>
		</Grid.ColumnDefinitions>
		<ListBox x:Name="lb_teszta" d:ItemsSource="{d:SampleData ItemCount=3}" Margin="1,14,0,308" Grid.Column="1"/>
		<ComboBox x:Name="cmb_meret" Margin="0,134,0,0" VerticalAlignment="Top" Height="22" Grid.Column="1" HorizontalAlignment="Center" Width="146"/>
		<CheckBox x:Name="chb_sajt" Grid.Column="1" Content="Sajt" HorizontalAlignment="Center" Margin="0,175,0,0" VerticalAlignment="Top" Width="146" Height="15"/>
		<CheckBox x:Name="chb_kukorica" Grid.Column="1" Content="Kukorica" HorizontalAlignment="Center" Margin="0,250,0,0" VerticalAlignment="Top" Width="146" Height="15"/>
		<CheckBox x:Name="chb_oliva" Grid.Column="1" Content="Olívabogyó" HorizontalAlignment="Center" Margin="0,231,0,0" VerticalAlignment="Top" Width="146" Height="15"/>
		<CheckBox x:Name="chb_gomba" Grid.Column="1" Content="Gomba" HorizontalAlignment="Center" Margin="0,213,0,0" VerticalAlignment="Top" Width="146" Height="15"/>
		<CheckBox x:Name="chb_sonka" Grid.Column="1" Content="Sonka" HorizontalAlignment="Center" Margin="0,194,0,0" VerticalAlignment="Top" Width="146" Height="15"/>
		<RadioButton x:Name ="rb_haz" Grid.Column="1" Content="Házhoz szállítás" HorizontalAlignment="Center" Margin="0,272,0,0" VerticalAlignment="Top" Width="146" Height="15"/>
		<RadioButton x:Name="rb_szem" Grid.Column="1" Content="Személyes átvétel" HorizontalAlignment="Center" Margin="0,289,0,0" VerticalAlignment="Top" Width="146" Height="15"/>
		<Button x:Name="btn_ossz" Grid.Column="1" Content="Rendelés leadása" HorizontalAlignment="Center" Margin="0,330,0,0" VerticalAlignment="Top" Width="152" Height="20"/>

	</Grid>
</Window>
